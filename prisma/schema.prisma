// This is your Prisma schema file,
// learn more about it in the docs: https://pris.lyd/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//  AUTH & USER MODELS ---

model User {
  id              String        @id @default(cuid())
  name            String?
  email           String        @unique
  hashedPassword  String?
  image           String?
  emailVerified   DateTime?
  accounts        Account[]
  role            UserRole      @default(STUDENT) // Uses the enum below
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  // Relations
  organizationId  String?
  organization    Organization? @relation("OrgMembers", fields: [organizationId], references: [id])
  ownedOrganization Organization? @relation("OrgOwner")
  quizAttempts    QuizAttempt[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  ownerId   String   @unique
  owner     User     @relation("OrgOwner", fields: [ownerId], references: [id])
  members   User[]   @relation("OrgMembers")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  questions Question[]
}

// --- EXAM & CONTENT MODELS ---


model Exam {
  id          String   @id @default(cuid())
  name        String   @unique // e.g., "WASSCE (WAEC)"
  shortName   String   @unique // e.g., "WAEC"
  description String?
  
  // Relations
  questions   Question[]
  quizAttempts QuizAttempt[]
}

model Subject {
  id           String        @id @default(cuid())
  name         String        @unique // e.g., "Mathematics"
  
  // Relations
  questions    Question[]
  quizAttempts QuizAttempt[]
}

model Question {
  id          String    @id @default(cuid())
  text        String    @db.Text
  explanation String?   @db.Text
  sourceApi   String?
  year        Int

  // Relations
  subjectId   String
  subject     Subject   @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  
  // NEW: Relation to Exam
  examId      String
  exam        Exam      @relation(fields: [examId], references: [id], onDelete: Cascade)
  
  options     Option[]

  userAnswers UserAnswer[]
  tags        Tag[]     @relation("QuestionTags")

  organizationId String? // Optional: null for "general" questions
  organization   Organization? @relation(fields: [organizationId], references: [id])
}

model Option {
  id         String   @id @default(cuid())
  text       String
  isCorrect  Boolean  @default(false)
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  userAnswers UserAnswer[]
}

model Tag {
  id        String     @id @default(cuid())
  name      String     @unique // The tag name (e.g., "Trigonometry")
  
  // Relations
  questions Question[] @relation("QuestionTags")
}

// PERFORMANCE MODELS ---

model QuizAttempt {
  id          String   @id @default(cuid())
  score       Int      // e.g., 85 (percentage)
  correct     Int      // Total correct answers
  total       Int      // Total questions answered
  timeTaken   Int      // Time in seconds
  createdAt   DateTime @default(now())
  
  year        Int

  // Relations
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  subjectId   String
  subject     Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  
  // NEW: Relation to Exam
  examId      String
  exam        Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)
  
  userAnswers UserAnswer[]
}

// Model to store the user's answer for each question in an attempt
model UserAnswer {
  id                String  @id @default(cuid())
  
  // Relations
  quizAttemptId     String
  quizAttempt       QuizAttempt @relation(fields: [quizAttemptId], references: [id], onDelete: Cascade)
  
  questionId        String
  question          Question    @relation(fields: [questionId], references: [id], onDelete: Cascade)
  
  // Nullable if they skipped the question
  selectedOptionId  String?
  option            Option?     @relation(fields: [selectedOptionId], references: [id], onDelete: Cascade)

  // Store if this answer was correct for faster lookups
  isCorrect         Boolean
}

// ENUMS ---

enum UserRole {
  STUDENT
  ORGANIZATION
  ADMIN // Replaced SUPER_ADMIN for simplicity
}